.listItem
  display flex
  margin-top 20px
  img
    width 120px
    height 90px
  .desc
    width 100%
    box-sizing border-box
    padding-left 10px
    position relative
    .distance
      position absolute
      top 0
      right 10px
    .title
      line-height 20px
      margin-bottom 8px
      font-weight 600
    .subtitle
      line-height 20px
      font-size 14px
      margin-bottom 10px
    .info
      display flex
      justify-content space-between
      strong
        color red
      span
        margin-right 10px